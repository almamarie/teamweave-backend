enum Gender {
  male
  female
}

model User {
  id              String           @id @default(cuid())
  firstName       String 
  lastName        String 
  otherNames      String? 
  dateOfBirth     DateTime? 
  email           String           @unique
  gender          Gender?
  profilePicture  String?
  bio             String?
  twitterLink     String?
  linkedinLink    String?
  facebookLink    String?
  githubUsername  String?
  gitlabbUsername String?
  website         String?
  location        String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @default(now())

  skills          Skills[] @relation("UserSkills")
  projects        Project[]
  journeyMaps     JourneyMap[]
  uiuxDesigns     UIUXDesign[]
  frontends       Frontend[]
  backends        Backend[]
  fullstacks      Fullstack[]
  activityEvents  ActivityEvent[]
  comments        Comment[]
  upvotes         Upvote[]
  projectComments ProjectComment[]
  projectUpvotes  ProjectUpvote[]
  userStories     UserStory[]
  userJourneys    UserJourney[]

  passwordHash         String
  passwordResetToken   String?
  passwordResetExpires DateTime?
  passwordChangedAt    DateTime  @default(now())

  accountIsActivated       Boolean   @default(false)
  accountActivationToken   String?
  accountActivationExpires DateTime?
  accountActivatedAt       DateTime?

  // phoneNumberVerifiedAt               DateTime?
  // phoneNumberIsVerified               Boolean   @default(false)
  // phoneNumberVerificationToken        String?
  // phoneNumberVerificationTokenExpires DateTime?
  // phoneNumberVerificationCode         String?

  // mfaEnabled       Boolean?
  // mfaType          String    @default("NONE")
  // mfaCode          String?
  // mfaCodeExpiresAt DateTime?

  role String

  @@map("users")
}
